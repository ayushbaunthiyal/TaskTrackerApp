{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5433;Database=TaskTrackerDB;Username=tasktracker_user;Password=TaskTracker123!"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/api-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithCorrelationId" ]
  },
  "Pagination": {
    "DefaultPageSize": 25,
    "MaxPageSize": 100
  },
  "JwtSettings": {
    "Secret": "TaskTracker-Super-Secret-Key-For-JWT-Token-Generation-Min-32-Chars",
    "Issuer": "TaskTrackerAPI",
    "Audience": "TaskTrackerClient",
    "AccessTokenExpiresInMinutes": 60,
    "RefreshTokenExpiresInDays": 7
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "PerUser": {
      "PermitLimit": 100,
      "WindowInSeconds": 60,
      "QueueLimit": 5
    },
    "PerIpAuth": {
      "PermitLimit": 20,
      "WindowInSeconds": 900
    },
    "PerIpStrict": {
      "PermitLimit": 10,
      "WindowInSeconds": 60
    }
  },
  "AllowedHosts": "*"
}
