{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5433;Database=TaskTrackerDB;Username=tasktracker_user;Password=TaskTracker123!"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithCorrelationId" ]
  },
  "Pagination": {
    "DefaultPageSize": 25,
    "MaxPageSize": 100
  },
  "JwtSettings": {
    "Secret": "TaskTracker-Super-Secret-Key-For-JWT-Token-Generation-Min-32-Chars",
    "Issuer": "TaskTrackerAPI",
    "Audience": "TaskTrackerClient",
    "AccessTokenExpiresInMinutes": 60,
    "RefreshTokenExpiresInDays": 7
  },
  "AllowedHosts": "*"
}
