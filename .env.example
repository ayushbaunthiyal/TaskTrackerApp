# Database Configuration
POSTGRES_DB=TaskTrackerDB
POSTGRES_USER=tasktracker_user
POSTGRES_PASSWORD=your-secure-password-here

# Database Connection String (used by API and Worker)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=TaskTrackerDB
DB_USER=tasktracker_user
DB_PASSWORD=your-secure-password-here

# JWT Settings
JWT_SECRET=CHANGE-THIS-TO-A-SECURE-SECRET-KEY-MIN-32-CHARS
JWT_ISSUER=TaskTrackerAPI
JWT_AUDIENCE=TaskTrackerClient
JWT_ACCESS_TOKEN_EXPIRES_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRES_DAYS=7

# Mailgun Settings (Get these from your Mailgun account)
MAILGUN_API_KEY=your-mailgun-api-key-here
MAILGUN_DOMAIN=your-mailgun-domain.mailgun.org
MAILGUN_FROM_EMAIL=TaskTracker <noreply@your-mailgun-domain.mailgun.org>
MAILGUN_FROM_NAME=TaskTracker Reminder Service

# Worker Settings
WORKER_CHECK_INTERVAL_MINUTES=60
WORKER_LOOKAHEAD_HOURS=24
WORKER_MAX_EMAILS_PER_RUN=50
WORKER_DAILY_EMAIL_QUOTA=90
WORKER_ENABLE_EMAIL_SENDING=true

# API Settings
API_PORT=5128
API_ENVIRONMENT=Production

# UI Settings
UI_PORT=3000

# PostgreSQL Port (exposed on host)
POSTGRES_HOST_PORT=5433
